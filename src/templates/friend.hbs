{{#each this}}
<li class="friend" data-id="{{id}}" {{#unless favorites}} draggable="true" {{/unless}}>
  <div>
    <img src="{{photo_50}}" height="45" width="45" draggable="false">
    <p>{{first_name}} {{last_name}}</p>
  </div>
  <button class="friend-button">
    {{#if favorites}}
    <i class="fas fa-times" style="color: #c4c4c4;; font-size: 2.2rem; pointer-events: none;"></i>
    {{else}}
    <i class="fa fa-plus" style="color: #c4c4c4; font-size: 2.2rem; pointer-events: none;"></i>
    {{/if}}
  </button>
</li>
{{/each}}
