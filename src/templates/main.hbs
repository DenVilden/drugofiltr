<div class="container">
  <header class="header">
    <h1 class="header__title">Выберите друзей</h1>
  </header>
  <section class="filter">
    <i class="fa fa-search filter__glyph"></i>
    <input class="filter__input filter__input--padding" id="input-all" type="text" placeholder="Начните вводить имя друга">
    <input class="filter__input" id="input-fav" type="text" placeholder="Название">
  </section>
  <main class="friends">
    <div class="friends__wrapper friends__wrapper--border">
      <h2 class="friends__title">Ваши друзья</h2>
      <ul class="friends__list" id="all">
        <span>
          <i class="fas fa-spinner fa-spin" style="margin-top: 12rem; font-size: 5rem;"></i>
          <p>Загружаю друзей</p>
        </span>
      </ul>
    </div>
    <div class="friends__wrapper">
      <h2 class="friends__title friends__title--margin">Друзья в списке</h2>
      <ul class="friends__list" id="fav"></ul>
    </div>
  </main>
  <footer class="footer">
    <button class="footer__button button" id="save-button">Сохранить</button>
  </footer>
</div>
